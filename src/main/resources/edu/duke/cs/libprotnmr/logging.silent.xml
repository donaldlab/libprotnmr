<?xml version="1.0" encoding="UTF-8"?>
<Configuration>

    <Appenders>
        <Console name="stdout" target="SYSTEM_OUT">
            <PatternLayout>
                <pattern>%m%n</pattern>
            </PatternLayout>
        </Console>
    </Appenders>

    <Loggers>
        <Root level="fatal">
            <AppenderRef ref="stdout"/>
        </Root>
    </Loggers>

</Configuration>